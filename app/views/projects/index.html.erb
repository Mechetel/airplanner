<div class='container-fluid full-width'>
  <div class="row justify-content-end">
    <div class="col-4">
      <div class="d-flex justify-content-center pt-5">
        <h1 class="display-2"><%= link_to 'Airplanner', root_path, class: "airplanner-text" %></h1>
      </div>
    </div>
    <div class="col-4 pt-5">
      <figure class="text-center">
        <blockquote class="blockquote">
          <p class="ms-5">
            Welcome
            <%= link_to current_user.full_name, profile_path(current_user.username) %>
            <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-primary' %>
          </p>
        </blockquote>
      </figure>
    </div>
  </div>
  <div class="text-center pt-1">
    <h3>From Dmitry Khoma</h3>
  </div>

  <div class='container'>
    <%= react_component('ProjectRoot', { projects: @projects }) %>
  </div>
</div>

<script type="text/javascript">
  setTimeout(function () {
    if (!document.querySelector(".projects")) {
      window.location.href="/"
    }
  }, 5);
</script>
